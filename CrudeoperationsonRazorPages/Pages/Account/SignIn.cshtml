@page
@model CrudeoperationsonRazorPages.Pages.Account.SignInModel
@{
    ViewData["Title"] = "Sign In";
}

<style>
    html, body {
        height: 100%;
        margin: 0;
        padding: 0;
    }

    body {
        background: url('/images/libraryBooks.jpg') no-repeat center center fixed;
        background-size: cover;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .login-card {
        background-color: rgba(255, 255, 255, 0.9);
        border-radius: 1.2rem;
        padding: 3rem 2rem;
        width: 400px;
        box-shadow: 0 15px 40px rgba(0, 0, 0, 0.4);
        text-align: center;
        position: relative;
        overflow: hidden;
    }

        /* Optional: small library icon/logo at top */
        .login-card::before {
            content: url('/images/library-logo.png'); /* your logo image */
            display: block;
            width: 60px;
            height: 60px;
            margin: 0 auto 15px auto;
        }

        .login-card h2 {
            margin-bottom: 1.8rem;
            font-weight: 700;
            color: #2c3e50;
            letter-spacing: 0.5px;
        }

    .form-control {
        border-radius: 0.5rem;
        padding: 0.75rem 1rem;
        border: 1px solid #ced4da;
        transition: all 0.3s;
    }

        .form-control:focus {
            border-color: #6c63ff;
            box-shadow: 0 0 0 0.2rem rgba(108, 99, 255, 0.25);
        }

    .btn-primary {
        background-color: #6c63ff;
        border-color: #6c63ff;
        padding: 0.75rem;
        border-radius: 0.5rem;
        font-weight: 600;
        transition: all 0.3s;
        margin-top: 10px;
    }

        .btn-primary:hover {
            background-color: #5a54d1;
            border-color: #5a54d1;
        }

    .signup-link {
        margin-top: 1rem;
        font-size: 0.95rem;
        color: #555;
    }

        .signup-link a {
            color: #6c63ff;
            font-weight: 500;
            text-decoration: none;
        }

            .signup-link a:hover {
                text-decoration: underline;
            }

    .text-danger {
        font-size: 0.875rem;
    }
</style>

<div class="login-card">
    <h2>Library Management System</h2>
    <p class="text-danger">@TempData["Message"]</p>
    <form method="post">
        <div class="mb-3 text-start">
            <label class="form-label">Email</label>
            <input type="email" class="form-control" name="Email" placeholder="Enter your email" required />
        </div>
        <div class="mb-3 text-start">
            <label class="form-label">Password</label>
            <input type="password" class="form-control" name="Password" placeholder="Enter your password" required />
        </div>
        <div class="form-check mb-3 text-start">
            <input class="form-check-input" type="checkbox" asp-for="RememberMe" />
            <label class="form-check-label">Remember Me</label>
        </div>
        <button type="submit" class="btn btn-primary w-100">Sign In</button>
    </form>
    <div class="signup-link">
        Don't have an account? <a asp-page="/Account/SignUp">Sign Up</a>
    </div>
</div>
